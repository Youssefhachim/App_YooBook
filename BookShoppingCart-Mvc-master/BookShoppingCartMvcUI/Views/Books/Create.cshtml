@model BookShoppingCartMvcUI.Models.Book

@{
    ViewData["Title"] = "Créer";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Créer un nouveau livre</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <style>
        body, label, input, select, .btn {
            color: white;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="display-4">Créer un nouveau livre</h1>

        <form asp-action="Create" class="mt-4" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="BookName" class="form-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AuthorName" class="form-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">Choisir une image :</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GenreId" class="form-label"></label>
                <select asp-for="GenreId" class="form-select" asp-items="ViewBag.GenreId"></select>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>
