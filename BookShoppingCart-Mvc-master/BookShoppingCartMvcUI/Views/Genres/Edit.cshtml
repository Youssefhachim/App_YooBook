@model BookShoppingCartMvcUI.Models.Genre

@{
    ViewData["Title"] = "Modifier";
}

<style>
    body, h1, h4, label, .col-md-4, .form-group, input, a {
        color: white;
    }
</style>

<div class="container mt-5">
    <h1 class="display-4">Modifier</h1>

    <h4>Genre</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="GenreName" class="control-label"></label>
                    <input asp-for="GenreName" class="form-control" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                </div>
                <br />
                <br />
                <br />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
